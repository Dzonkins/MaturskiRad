<UserControl x:Class="ProgramZaRacunovodstvo.Views.DodajPravnoLice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProgramZaRacunovodstvo.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.DataContext>
        <local:DodajPravnoLiceViewModel/>
    </UserControl.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  Grid.Row="1">

        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="Dodaj pravno lice"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       FontSize="28"
                       Margin="20,40,0,20"
                       Width="759"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
            <Border Grid.Row="1"
                    Background="#ebeced"
                    HorizontalAlignment="Center"
                    Padding="60"
                    Height="720"
                    VerticalAlignment="Top"
                    Margin="0,50,0,50"
                    CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <ui:TextBox MinHeight="50"
                                    MinWidth="1000"
                                    Width="1000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,20"
                                    PlaceholderText="Naziv"
                                    Text="{Binding Naziv}"
                                    VerticalContentAlignment="Center"
                                    TabIndex="1"></ui:TextBox>
                        <ui:TextBox MinHeight="50"
                                    MinWidth="1000"
                                    Width="1000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,20"
                                    MaxLength="9"
                                    PlaceholderText="PIB"
                                    Text="{Binding Pib}"
                                    PreviewTextInput="BrojCheck"
                                    VerticalContentAlignment="Center"
                                    TabIndex="2"></ui:TextBox>
                        <ui:TextBox MinHeight="50"
                                    MinWidth="1000"
                                    Width="1000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,20"
                                    MaxLength="8"
                                    PlaceholderText="Matični broj"
                                    Text="{Binding MaticniBroj}"
                                    PreviewTextInput="BrojCheck"
                                    VerticalContentAlignment="Center"
                                    TabIndex="3"></ui:TextBox>
                        <ui:TextBox MinHeight="50"
                                    MinWidth="1000"
                                    Width="1000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,20"
                                    PlaceholderText="Grad"
                                    Text="{Binding Grad}"
                                    VerticalContentAlignment="Center"
                                    TabIndex="4"></ui:TextBox>
                        <ui:TextBox MinHeight="50"
                                    MinWidth="1000"
                                    Width="1000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,20"
                                    PlaceholderText="Adresa"
                                    Text="{Binding Adresa}"
                                    VerticalContentAlignment="Center"
                                    TabIndex="5"></ui:TextBox>
                        <ui:TextBox MinHeight="50"
                                    MinWidth="1000"
                                    Width="1000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,20"
                                    MaxLength="18"
                                    PlaceholderText="Broj računa"
                                    Text="{Binding Racun}"
                                    PreviewTextInput="BrojCheck"
                                    VerticalContentAlignment="Center"
                                    TabIndex="6"></ui:TextBox>
                        <ui:TextBox MinHeight="50"
                                    MinWidth="1000"
                                    Width="1000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,0,0,0"
                                    PlaceholderText="Zastupnik"
                                    Text="{Binding Zastupnik}"
                                    VerticalContentAlignment="Center"
                                    TabIndex="7"></ui:TextBox>
                        <ui:TextBlock Text="{Binding Greska}"
                                      Margin="0,20,0,0"
                                      Foreground="Red"
                                      HorizontalAlignment="Center"
                                      FontSize="17"
                                      FontFamily="pack://application:,,,/Fonts/#Poppins Light"></ui:TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <ui:Button Grid.ColumnSpan="2"
                                   Grid.Column="0"
                                   Grid.Row="2"
                                   Width="400"
                                   Height="50"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0,20,0,0"
                                   BorderThickness="0"
                                   Foreground="White"
                                   FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                                   FontSize="15"
                                   TabIndex="8"
                                   Command="{Binding Sacuvaj}">
                            <ui:Button.Effect>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </ui:Button.Effect>
                            <ui:Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"
                                            Value="#4CAF50" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="13">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#81C784" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#388E3C" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ui:Button.Style>
                            <TextBlock Text="Sačuvaj"
                                       FontSize="22"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </ui:Button>
                        <ui:Button Width="400"
                                   Height="50"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,0,0"
                                   BorderThickness="0"
                                   Foreground="White"
                                   FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                                   FontSize="15"
                                   TabIndex="9"
                                   Click="Nazad">
                            <ui:Button.Effect>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </ui:Button.Effect>
                            <ui:Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"
                                            Value="Red" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="13">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#F73B3B" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#D32F2F" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ui:Button.Style>
                            <TextBlock Text="Nazad"
                                       FontSize="22"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </ui:Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
