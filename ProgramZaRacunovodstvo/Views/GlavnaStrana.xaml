<UserControl x:Class="ProgramZaRacunovodstvo.ViewModel.GlavnaStrana"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProgramZaRacunovodstvo.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vms="clr-namespace:ProgramZaRacunovodstvo.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0">
                    <TextBlock Text="Dobrodošli ImeFirme"
                               Name="Firma"
                               FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                               FontSize="28"
                               Margin="25,20,0,20"
                               Width="759" />
                    <lvc:PieChart Series="{Binding PrihodiRashodi}"
                                  Title="{Binding PrihodiRashodiNaslov}"
                                  LegendPosition="Bottom"
                                  Height="500" />
                </StackPanel>

                <StackPanel Grid.Row="0"
                            Grid.Column="1">
                    <ui:Card Width="Auto"
                             Height="120"
                             Padding="10"
                             Margin="40,80,40,10">
                        <ui:Card.Template>
                            <ControlTemplate TargetType="ui:Card">
                                <Border CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="1,1">
                                            <GradientStop Color="#FF7BD27B"
                                                          Offset="0" />
                                            <GradientStop Color="#FF98E599"
                                                          Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="10"
                                                          Direction="320"
                                                          Color="Gray"
                                                          Opacity="0.5"
                                                          BlurRadius="30" />
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch" />
                                </Border>
                            </ControlTemplate>
                        </ui:Card.Template>
                        <StackPanel>
                            <TextBlock Text="Trenutno stanje za februar"
                                       FontSize="30"
                                       Name="Stanje"
                                       Margin="10,0,0,0"
                                       Foreground="Black"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                            <TextBlock Text="{Binding StanjeFormatted}"
                                       FontSize="35"
                                       Margin="10,0,0,0"
                                       Foreground="Black"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                        </StackPanel>
                    </ui:Card>

                    <ui:Card Width="Auto"
                             Height="120"
                             Padding="10"
                             Margin="40,0,40,10">
                        <ui:Card.Template>
                            <ControlTemplate TargetType="ui:Card">
                                <Border CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="1,1">
                                            <GradientStop Color="#FF4F72FF"
                                                          Offset="0" />
                                            <GradientStop Color="#FF6A8CFF"
                                                          Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="10"
                                                          Direction="320"
                                                          Color="Gray"
                                                          Opacity="0.5"
                                                          BlurRadius="30" />
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch" />
                                </Border>
                            </ControlTemplate>
                        </ui:Card.Template>
                        <StackPanel>
                            <TextBlock Text="Ulazne fakture u februaru"
                                       Name="Ulazne"
                                       FontSize="30"
                                       Margin="10,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                            <TextBlock Text="{Binding UlazneFakture}"
                                       FontSize="40"
                                       Margin="10,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                        </StackPanel>
                    </ui:Card>

                    <ui:Card Width="Auto"
                             Height="120"
                             Padding="10"
                             Margin="40,0,40,10">
                        <ui:Card.Template>
                            <ControlTemplate TargetType="ui:Card">
                                <Border CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="1,1">
                                            <GradientStop Color="#FF4F72FF"
                                                          Offset="0" />
                                            <GradientStop Color="#FF6A8CFF"
                                                          Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="10"
                                                          Direction="320"
                                                          Color="Gray"
                                                          Opacity="0.5"
                                                          BlurRadius="30" />
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch" />
                                </Border>
                            </ControlTemplate>
                        </ui:Card.Template>
                        <StackPanel>
                            <TextBlock Text="Izlazne fakture u februaru"
                                       FontSize="30"
                                       Name="Izlazne"
                                       Margin="10,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                            <TextBlock Text="{Binding IzlazneFakture}"
                                       FontSize="40"
                                       Margin="10,0,0,0"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                        </StackPanel>
                    </ui:Card>

                    
                </StackPanel>

                <lvc:CartesianChart Grid.Row="2"
                                    Grid.Column="0"
                                    Series="{Binding Series}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    Title="{Binding DobavljaciNaslov}"
                                    Height="350"
                                    Margin="10" />
                <lvc:CartesianChart Grid.Row="2"
                                    Grid.Column="1"
                                    Series="{Binding Series}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    Title="{Binding KlijentiNaslov}"
                                    Height="350"
                                    Margin="10" />
                <lvc:CartesianChart Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    Series="{Binding Series}"
                                    Height="400"
                                    Margin="20"
                                    Title="{Binding PrihodiRashodiVise}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>