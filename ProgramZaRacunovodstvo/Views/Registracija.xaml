<UserControl x:Class="ProgramZaRacunovodstvo.Views.Registracija"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProgramZaRacunovodstvo.Views"
             mc:Ignorable="d">
    <Grid Width="auto"
          Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                <GradientStop Color="#FF223FFF"
                              Offset="1" />
                <GradientStop Color="#FF4FBBFF" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button 
                    Margin="0,550,0,0"
                    VerticalAlignment="Top"
                    Height="70"
                    BorderThickness="0"
                    FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                    FontSize="30"
                    HorizontalAlignment="Center"
                    Width="470"
                    Click="KreirajNalog"
                    TabIndex="8">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10"
                                      Direction="320"
                                      Color="Gray"
                                      Opacity="0.5"
                                      BlurRadius="30" />
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="Orange" />
                        <Setter Property="Foreground"
                                Value="Black" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#FFB300" />
                                        </Trigger>

                                        <Trigger Property="IsPressed"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#CC7700" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <TextBlock Text="Kreiraj nalog"
                           FontSize="30"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Button>
            <TextBlock Name="txtPasswordPlaceholder"
                       Text="Lozinka"
                       Foreground="#FF616161"
                       FontSize="24"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1"
                       Margin="36,468,393,235"
                       Width="86" />
            <PasswordBox Name="txtPassword"
                         VerticalAlignment="Top"
                         Height="70"
                         Width="470"
                         FontSize="24"
                         FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                         Foreground="Black"
                         VerticalContentAlignment="Center"
                         BorderThickness="0"
                         Background="#8CFFFFFF"
                         Margin="0,451,0,0"
                         GotFocus="txtPassword_GotFocus"
                         LostFocus="txtPassword_LostFocus"
                         TabIndex="7">
                <PasswordBox.Style>
                    <Style TargetType="PasswordBox">
                        <Setter Property="Background"
                                Value="#8CFFFFFF" />
                        <Setter Property="Foreground"
                                Value="Black" />
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="PasswordBox">
                                    <Border CornerRadius="15"
                                            BorderThickness="0"
                                            BorderBrush="Transparent"
                                            Background="#8CFFFFFF"
                                            Padding="10">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </PasswordBox.Style>
            </PasswordBox>


            <TextBox Name="txtPasswordVisible"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="Black"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Grid.Column="1"
                     Margin="0,451,0,0"
                     HorizontalAlignment="Center"
                     Width="470"
                     Visibility="Collapsed"
                     GotFocus="txtPassword_GotFocus"
                     LostFocus="txtPassword_LostFocus"
                     TabIndex="7">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>

                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="15"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Padding="10"
                                Background="#8CFFFFFF">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>


            <TextBox Name="txtEmail"
                     Margin="0,367,0,0"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="#FF616161"
                     Text="Email"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Width="470"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     TabIndex="6">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="15"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Padding="10"
                                Background="#8CFFFFFF">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <Button Width="46"
                    Height="32"
                    Margin="427,470,42,0"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderThickness="0"
                    Click="PrikaziSifru"
                    IsTabStop="False">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent"
                                BorderThickness="0">
                            <Image Width="40"
                                   Height="26"
                                   Source="/slike/sifra.png"
                                   Stretch="Fill"
                                   RenderTransformOrigin="0.5,0.5" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBox x:Name="txtIme"
                     Margin="22,30,267,0"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="#FF616161"
                     Text="Ime"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Grid.Column="1"
                     Width="226"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     TabIndex="1">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="15"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Padding="10"
                                Background="#8CFFFFFF">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <TextBox x:Name="txtPrezime"
                     Margin="268,30,23,0"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="#FF616161"
                     Text="Prezime"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Grid.Column="1"
                     Width="224"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     TabIndex="2">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="15"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Padding="10"
                                Background="#8CFFFFFF">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <TextBox x:Name="txtJMBG"
                     MaxLength="13"
                     Margin="0,115,0,0"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="#FF616161"
                     Text="JMBG"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Width="470"
                     PreviewTextInput="BrojCheck"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     TabIndex="3">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="15"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Padding="10"
                                Background="#8CFFFFFF">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <TextBox x:Name="txtAdresa"
                     Margin="0,283,0,0"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="#FF616161"
                     Text="Adresa"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Width="470"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     TabIndex="5">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="15"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Padding="10"
                                Background="#8CFFFFFF">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <TextBox x:Name="txtGrad"
                     Margin="0,199,0,0"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="#FF616161"
                     Text="Grad"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Width="470"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     TabIndex="4">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="15"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Padding="10"
                                Background="#8CFFFFFF">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <Button Margin="0,643,0,33"
                    Foreground="White"
                    BorderThickness="0"
                    FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                    FontSize="30"
                    HorizontalAlignment="Center"
                    Width="470"
                    Click="Nazad"
                    Height="70"
                    TabIndex="9">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10"
                                      Direction="320"
                                      Color="Gray"
                                      Opacity="0.5"
                                      BlurRadius="30" />
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="Red" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#F73B3B" />
                                        </Trigger>

                                        <Trigger Property="IsPressed"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#D32F2F" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>

                <TextBlock Text="Odustani"
                           FontSize="30"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Button>
            <TextBlock Name="greska"
                       Text="Netačan email ili lozinka"
                       FontSize="18"
                       Foreground="Red"
                       Visibility="Collapsed"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,323,0,0" />
        </Grid>
    </Grid>
</UserControl>
