<UserControl x:Class="ProgramZaRacunovodstvo.Views.Registracija"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProgramZaRacunovodstvo.Views"
             mc:Ignorable="d">
    <Grid Width="auto"
          Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                <GradientStop Color="#FF223FFF"
                              Offset="1" />
                <GradientStop Color="#FF4FBBFF" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Content="Kreiraj nalog"
                    Margin="0,543,0,0"
                    VerticalAlignment="Top"
                    Height="70"
                    Background="Orange"
                    BorderThickness="0"
                    FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                    FontSize="30"
                    HorizontalAlignment="Center"
                    Width="470">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10"
                                      Direction="320"
                                      Color="Gray"
                                      Opacity="0.5"
                                      BlurRadius="30" />
                </Button.Effect>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="10"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Name="txtPasswordPlaceholder"
                       Text="Lozinka"
                       Foreground="Gray"
                       FontSize="24"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1"
                       Margin="36,468,393,235"
                       Width="86" />
            <PasswordBox Name="txtPassword"
                         VerticalAlignment="Top"
                         Height="70"
                         FontSize="24"
                         FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                         Foreground="Black"
                         VerticalContentAlignment="Center"
                         BorderThickness="0"
                         Margin="0,451,0,0"
                         HorizontalAlignment="Center"
                         Width="470"
                         GotFocus="txtPassword_GotFocus"
                         LostFocus="txtPassword_LostFocus">
                <PasswordBox.Style>
                    <Style TargetType="PasswordBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </PasswordBox.Style>

                <PasswordBox.Template>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="White"
                                CornerRadius="15"
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Padding="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </PasswordBox.Template>
            </PasswordBox>

            <TextBox Name="txtPasswordVisible"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="Black"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Grid.Column="1"
                     Margin="0,451,0,0"
                     HorizontalAlignment="Center"
                     Width="470"
                     Visibility="Collapsed">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>

                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White"
                                CornerRadius="15"
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Padding="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>


            <TextBox Name="txtEmail"
                     Margin="0,367,0,0"
                     VerticalAlignment="Top"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="Gray"
                     Text="Email"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Width="470"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
