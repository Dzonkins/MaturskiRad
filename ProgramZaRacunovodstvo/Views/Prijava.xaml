<UserControl x:Class="ProgramZaRacunovodstvo.Prijava"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Width="auto"
          Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                <GradientStop Color="#FF223FFF"
                              Offset="1" />
                <GradientStop Color="#FF4FBBFF" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Button Content="Registruj Se"
                    HorizontalAlignment="Center"
                    Margin="0,467,0,0"
                    VerticalAlignment="Top"
                    Height="70"
                    Width="470"
                    Background="Orange"
                    BorderThickness="0"
                    FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                    FontSize="30"
                    Click="Button_Click_1">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10"
                                      Direction="320"
                                      Color="Gray"
                                      Opacity="0.5"
                                      BlurRadius="30" />
                </Button.Effect>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="10"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Text="Prijava"
                       FontSize="40"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       Foreground="White"
                       Margin="207,-40,207,540"></TextBlock>
            <Button Content="Prijavi Se"
                    HorizontalAlignment="Center"
                    Margin="0,381,0,0"
                    VerticalAlignment="Top"
                    Height="70"
                    Width="470"
                    Background="Orange"
                    BorderThickness="0"
                    FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                    FontSize="30"
                    Click="Button_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="10"
                                      Direction="320"
                                      Color="Gray"
                                      Opacity="0.5"
                                      BlurRadius="30" />
                </Button.Effect>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="10"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Name="txtPasswordPlaceholder"
                       Text="Lozinka"
                       Foreground="Gray"
                       FontSize="24"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       IsHitTestVisible="False"
                       HorizontalAlignment="Center"
                       Panel.ZIndex="1"
                       Margin="37,292,393,237"
                       Grid.Column="1" />
            <PasswordBox Name="txtPassword"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Width="470"
                         Height="70"
                         FontSize="24"
                         FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                         Foreground="Black"
                         VerticalContentAlignment="Center"
                         BorderThickness="0"
                         Grid.Column="1"
                         Margin="0,275,0,0"
                         GotFocus="txtPassword_GotFocus"
                         LostFocus="txtPassword_LostFocus">
                <PasswordBox.Style>
                    <Style TargetType="PasswordBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </PasswordBox.Style>

                <PasswordBox.Template>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="White"
                                CornerRadius="15"
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Padding="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </PasswordBox.Template>
            </PasswordBox>

            <TextBox Name="txtPasswordVisible"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Width="470"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="Black"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Grid.Column="1"
                     Margin="0,275,0,0"
                     Visibility="Collapsed">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White"
                                CornerRadius="15"
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Padding="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>


            <TextBox Name="txtEmail"
                     HorizontalAlignment="Center"
                     Margin="0,192,0,0"
                     VerticalAlignment="Top"
                     Width="470"
                     Height="70"
                     FontSize="24"
                     FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                     Foreground="Gray"
                     Text="Email"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Grid.Column="1"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect ShadowDepth="10"
                                                  Direction="320"
                                                  Color="Gray"
                                                  Opacity="0.5"
                                                  BlurRadius="30" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="White"
                                CornerRadius="15"
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Padding="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <Image Margin="0,48,0,0"
                   Source="/slike/Vector.png"
                   Stretch="Fill"
                   HorizontalAlignment="Center"
                   Width="120"
                   Height="120"
                   VerticalAlignment="Top" />
            <Button Grid.Column="1"
                    Width="46"
                    Height="32"
                    Margin="435,296,34,0"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    BorderThickness="0"
                    Click="Button_Click_2">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent"
                                BorderThickness="0">
                            <Image Width="40"
                                   Height="26"
                                   Source="/slike/sifra.png"
                                   Stretch="Fill"
                                   RenderTransformOrigin="0.5,0.5" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>