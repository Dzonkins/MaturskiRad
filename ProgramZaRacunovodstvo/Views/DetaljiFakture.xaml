<UserControl x:Class="ProgramZaRacunovodstvo.Views.DetaljiFakture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:ProgramZaRacunovodstvo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  x:Name="MainScrollViewer">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition Width="310"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Detalji fakture"
                       Grid.ColumnSpan="2"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       FontSize="28"
                       Margin="20,40,0,20"
                       Width="759"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
            <StackPanel Grid.Row="1"
                        Grid.Column="0">
                <TextBlock Margin="20,20,0,0"
                           FontSize="15"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           Text="Broj fakture"></TextBlock>
                <ui:TextBox Margin="20,10,0,0"
                            Text="{Binding BrojFakture}"
                            IsReadOnly="True"></ui:TextBox>

                <TextBlock Margin="20,20,0,0"
                           FontSize="15"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           Text="Datum slanja"></TextBlock>
                <ui:TextBox Margin="20,10,0,0"
                            Text="{Binding DatumSlanja}"
                            IsReadOnly="True"></ui:TextBox>
                <TextBlock Margin="20,20,0,0"
                           FontSize="15"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           Text="Iznos fakture"></TextBlock>
                <ui:TextBox Margin="20,10,0,0"
                            Text="{Binding Iznos}"
                            IsReadOnly="True"></ui:TextBox>
                <TextBlock Margin="20,20,0,0"
                           FontSize="15"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           Text="Tip fakture"></TextBlock>
                <ui:TextBox Margin="20,10,0,0"
                            Text="{Binding TipFakture}"
                            IsReadOnly="True"></ui:TextBox>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Margin="60,0,0,0">
                <TextBlock Margin="20,20,0,0"
                           FontSize="15"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           Text="Dobavljač"></TextBlock>
                <ui:TextBox Margin="20,10,0,0"
                            Text="{Binding Dobavljac}"
                            IsReadOnly="True"></ui:TextBox>

                <TextBlock Margin="20,20,0,0"
                           FontSize="15"
                           FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                           Text="Kupac"></TextBlock>
                <ui:TextBox Margin="20,10,0,0"
                            Text="{Binding Kupac}"
                            IsReadOnly="True"></ui:TextBox>
                <CheckBox Margin="10,50,0,0"
                          IsChecked="{Binding Placeno, Mode=TwoWay}"
                          Command="{Binding Checkbox}"
                          CommandParameter="{Binding Placeno}">Plaćeno</CheckBox>
               
            </StackPanel>
            <TextBlock Margin="60,20,0,0"
                       FontSize="15"
                       Grid.Column="2"
                       Grid.Row="1"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       Text="Prilozi"></TextBlock>
            <DataGrid Name="fajlovi"
                      Grid.Column="2"
                      Grid.Row="1"
                      IsReadOnly="True"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      AutoGenerateColumns="False"
                      ScrollViewer.CanContentScroll="False"
                      ItemsSource="{Binding Fajlovi}"
                      Margin="50,20,20,20">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background"
                                Value="#FF4F72FF" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="FontWeight"
                                Value="Bold" />
                        <Setter Property="Padding"
                                Value="10" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="10"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Visibility"
                                Value="Hidden" />
                    </Style>

                    <Style TargetType="DataGridRow">
                        <Setter Property="MinHeight"
                                Value="50" />
                        <Setter Property="Background"
                                Value="White" />
                        <Setter Property="BorderBrush"
                                Value="Transparent" />
                        <Setter Property="OverridesDefaultStyle"
                                Value="False" />
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="Background"
                                Value="Transparent" />
                        <Setter Property="BorderBrush"
                                Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Foreground"
                                        Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Slika"
                                            Width="Auto"
                                            MinWidth="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="/slike/file.png"
                                       Width="50"
                                       Height="50" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Ime fajla"
                                        Width="Auto"
                                        MinWidth="50"
                                        Binding="{Binding NazivFajla}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment"
                                        Value="Center" />
                                <Setter Property="HorizontalAlignment"
                                        Value="Center" />
                                <Setter Property="Padding"
                                        Value="10" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Preuzmi"
                                            Width="Auto"
                                            MinWidth="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="📥 Preuzmi"
                                        Padding="5"
                                        Margin="5"
                                        Command="{Binding DataContext.Sacuvaj, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
            <wv2:WebView2 x:Name="pdfViewer"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          Grid.Row="2"
                          Margin="20,40,20,20"
                          MinWidth="0"
                          Width="900"
                          Height="1200"
                          Source="{Binding PdfUrl}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"/>
        </Grid>
    </ScrollViewer>
   
</UserControl>
