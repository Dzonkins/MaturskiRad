<UserControl x:Class="ProgramZaRacunovodstvo.IzborFirme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProgramZaRacunovodstvo"
             mc:Ignorable="d">
    <Grid Width="auto" Height="auto">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF223FFF" Offset="1"/>
                <GradientStop Color="#FF4FBBFF"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="ImeFirme" 
        HorizontalAlignment="Left" 
        Margin="0,259,0,0"
        VerticalAlignment="Top" 
        Height="70" 
        Width="470" 
        Background="White" 
        BorderThickness="0"
        FontFamily="pack://application:,,,/Fonts/#Poppins Light" 
        FontSize="30" 
        Click="Button_Click_1">
            <Button.Effect>
                <DropShadowEffect
          ShadowDepth="10"
          Direction="320"
          Color="Gray"
          Opacity="0.5"
          BlurRadius="30"/>
            </Button.Effect>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    CornerRadius="15"
                    Padding="10"
                    BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button Content="Dodaj firmu" Width="470" Height="70" Background="White" BorderThickness="0" FontFamily="pack://application:,,,/Fonts/#Poppins Light" FontSize="40" Margin="0,348,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button.Effect>
                <DropShadowEffect
                  ShadowDepth="10"
                  Direction="320"
                  Color="Gray"
                  Opacity="0.5"
                  BlurRadius="30"/>
            </Button.Effect>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="10" BorderThickness="0">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Image Margin="0,60,0,0" Source="/slike/firma.png" Stretch="Fill" HorizontalAlignment="Center" Width="146" Height="139" VerticalAlignment="Top"/>
    </Grid>
</UserControl>