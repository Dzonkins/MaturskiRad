<UserControl x:Class="ProgramZaRacunovodstvo.IzborFirme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:ProgramZaRacunovodstvo"
             mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                <GradientStop Color="#FF223FFF"
                              Offset="1" />
                <GradientStop Color="#FF4FBBFF" />
            </LinearGradientBrush>
        </Grid.Background>

        <Image Margin="0,60,0,0"
               Source="/slike/firma.png"
               Stretch="Fill"
               HorizontalAlignment="Center"
               Width="146"
               Height="139"
               VerticalAlignment="Top" />

        <UniformGrid x:Name="FirmaPanel"
                     Rows="4"
                     Columns="2"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0,200,0,0" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,50">

            <ui:Button
                       Height="70"
                       Width="470"
                       Background="White"
                       BorderThickness="0"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       FontSize="30"
                       Margin="0,0,20,0"
                       CornerRadius="15">
                <ui:Button.Effect>
                    <DropShadowEffect ShadowDepth="10"
                                      Direction="320"
                                      Color="Gray"
                                      Opacity="0.5"
                                      BlurRadius="30" />
                </ui:Button.Effect>
                <ui:Button.Content>
                    <TextBlock Text="Dodaj firmu"
                               FontSize="30"
                               FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </ui:Button.Content>
            </ui:Button>

            <ui:Button
                       Height="70"
                       Width="470"
                       Background="Red"
                       Foreground="White"
                       BorderThickness="0"
                       FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                       FontSize="30"
                       Click="Button_Click_1"
                       CornerRadius="15">
                <ui:Button.Effect>
                    <DropShadowEffect ShadowDepth="10"
                                      Direction="320"
                                      Color="Gray"
                                      Opacity="0.5"
                                      BlurRadius="30" />
                </ui:Button.Effect>
                <ui:Button.Content>
                    <TextBlock Text="Nazad"
                               FontSize="30"
                               FontFamily="pack://application:,,,/Fonts/#Poppins Light"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </ui:Button.Content>
            </ui:Button>
        </StackPanel>
    </Grid>
</UserControl>