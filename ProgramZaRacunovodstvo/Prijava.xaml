<UserControl x:Class="ProgramZaRacunovodstvo.Prijava"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Width="auto" Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="1877*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF223FFF" Offset="1"/>
                <GradientStop Color="#FF4FBBFF"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button Content="Registruj Se" 
                HorizontalAlignment="Center" 
                Margin="0,566,0,0"
                VerticalAlignment="Top" 
                Height="100" 
                Width="570" 
                Background="Orange" 
                BorderThickness="0"
                FontFamily="pack://application:,,,/Fonts/#Poppins-Meduim" 
                FontSize="40"
                Grid.Column="1" 
                Click="Button_Click_1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Padding="10"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Content="Prijavi Se" 
                HorizontalAlignment="Center" 
                Margin="0,448,0,0"
                VerticalAlignment="Top" 
                Height="100" 
                Width="570" 
                Background="Orange" 
                BorderThickness="0"
                FontFamily="pack://application:,,,/Fonts/#Poppins-Meduim" 
                FontSize="40"
                Grid.Column="1" 
                Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Padding="10"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBox HorizontalAlignment="Center" 
                 Margin="0,310,0,0" 
                 VerticalAlignment="Top"
                 Width="570" 
                 Height="100" 
                 FontSize="32" 
                 FontFamily="pack://application:,,,/Fonts/#Poppins-Meduim"
                 Foreground="Gray" 
                 Text="Lozinka" 
                 VerticalContentAlignment="Center" 
                 BorderThickness="0"
                 Grid.Column="1">
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="White" 
                            CornerRadius="15" 
                            BorderBrush="Gray" 
                            BorderThickness="2" 
                            Padding="10">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <TextBox HorizontalAlignment="Center" 
                 Margin="0,192,0,0" 
                 VerticalAlignment="Top"
                 Width="570" 
                 Height="100" 
                 FontSize="32" 
                 FontFamily="pack://application:,,,/Fonts/#Poppins-Medium"
                 Foreground="Gray" 
                 Text="Email" 
                 VerticalContentAlignment="Center" 
                 BorderThickness="0"
                 Grid.Column="1">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border Background="White" 
                            CornerRadius="15" 
                            BorderBrush="Gray" 
                            BorderThickness="2" 
                            Padding="10">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                      VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        
        <Image Grid.Column="1" Margin="0,24,0,0" Source="/slike/Vector.png" Stretch="Fill" HorizontalAlignment="Center" Width="137" Height="136" VerticalAlignment="Top"/>
    </Grid>
</UserControl>