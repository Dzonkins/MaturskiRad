<Window x:Class="ProgramZaRacunovodstvo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramZaRacunovodstvo"
        mc:Ignorable="d"
        Title="Program"
        ResizeMode="CanResize"
        Background="Transparent"
        Width="1366"
        Height="768">
    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4F72FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Poppins-Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10" BorderThickness="2" BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="Background" Value="#FF3B5FFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2B4FFF"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid x:Name="MainLayout" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>

                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <StackPanel Background="#FF4F72FF" Width="200">
                <Button Tag="Pocetna" Style="{StaticResource SidebarButtonStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="slike/pocetna.png" Width="20" Height="20"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-50,0,0,0" Grid.Column="0"/>
                        <TextBlock Text="Početna" VerticalAlignment="Bottom" Grid.Column="1" Margin="-15,0,14,-5"/>
                    </Grid>
                </Button>
                <Button Content="Nabavke" Tag="Nabavke" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Prodaja" Tag="Prodaja" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Izvodi" Tag="Izvodi" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>


            <ContentControl x:Name="MainContent" Grid.Column="1"/>
        </Grid>
        <Grid x:Name="OverlayContainer" Background="White" Visibility="Collapsed">
            <ContentPresenter x:Name="OverlayContent"/>
        </Grid>
    </Grid>
</Window>