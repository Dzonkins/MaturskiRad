<Window x:Class="ProgramZaRacunovodstvo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramZaRacunovodstvo"
        mc:Ignorable="d"
        Title="Program"
        ResizeMode="CanResize"
        WindowState="Maximized"
        Background="Transparent"
        Width="1366"
        Height="768">
    <Window.Resources>
        <Style x:Key="SidebarButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#FF4F72FF" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="FontFamily"
                    Value="pack://application:,,,/Fonts/#Poppins Light" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="10" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <EventSetter Event="Click"
                         Handler="Navigacija" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="10"
                                BorderThickness="2"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="White" />
                    <Setter Property="Background"
                            Value="#FF3B5FFF" />
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF2B4FFF" />
                    <Setter Property="BorderBrush"
                            Value="White" />
                </Trigger>
                
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid x:Name="MainLayout"
              Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />

                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>


            <Grid Background="#FF4F72FF"
                  Width="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Height="100">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Source="slike/vector.png" Width="30" Height="30" Grid.Column="0"  Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-27,0,0,0"></Image>
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,0"
                                    Width="125">
                            <Border Width="125"></Border>
                            <TextBlock Text="Dobrodošli"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       FontSize="20"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />

                            <TextBlock Text="ImeKorisnika"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       FontSize="20"
                                       FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Button Tag="Pocetna"
                        Style="{StaticResource SidebarButtonStyle}"
                        Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="slike/pocetna.png"
                               Width="30"
                               Height="30"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="-49,0,0,0"
                               Grid.Column="0" />
                        <TextBlock Text="Početna"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"
                                   Margin="-6,0,5,0"
                                   FontSize="20"
                                   FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                    </Grid>
                </Button>

                <Button Tag="Nabavke"
                        Style="{StaticResource SidebarButtonStyle}"
                        Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="slike/nabavke.png"
                               Width="30"
                               Height="30"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="-46,0,0,0"
                               Grid.Column="0" />
                        <TextBlock Text="Nabavke"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"
                                   Margin="-5,0,2,0"
                                   FontSize="20"
                                   FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                    </Grid>
                </Button>

                <Button Tag="Prodaja"
                        Style="{StaticResource SidebarButtonStyle}"
                        Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="slike/prodaja.png"
                               Width="30"
                               Height="30"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="-50,0,0,0"
                               Grid.Column="0" />
                        <TextBlock Text="Prodaja"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"
                                   Margin="-8,0,8,0"
                                   FontSize="20"
                                   FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                    </Grid>
                </Button>

                <Button Tag="Izvodi"
                        Style="{StaticResource SidebarButtonStyle}"
                        Grid.Row="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="slike/izvod.png"
                               Width="30"
                               Height="30"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="-55,0,0,0"
                               Grid.Column="0" />
                        <TextBlock Text="Izvodi"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"
                                   Margin="-8,0,18,0"
                                   FontSize="20"
                                   FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                    </Grid>
                </Button>

                <Button Tag="IzlogujSe"
                        Style="{StaticResource SidebarButtonStyle}"
                        Grid.Row="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="slike/logout.png"
                               Width="30"
                               Height="30"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="-47,0,0,0"
                               Grid.Column="0" />
                        <TextBlock Text="Izloguj se"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"
                                   Margin="-5,0,0,0"
                                   FontSize="20"
                                   FontFamily="pack://application:,,,/Fonts/#Poppins Light" />
                    </Grid>
                </Button>
            </Grid>


            <ContentControl x:Name="MainContent"
                            Grid.Column="1" />
        </Grid>
        <Grid x:Name="OverlayContainer"
              Background="White"
              Visibility="Collapsed">
            <ContentPresenter x:Name="OverlayContent" />
        </Grid>
    </Grid>
</Window>